    padding: 70px 0;
    position: absolute;

}
/*Toggle this class- hide and show the popup*/
.popup .show{
	visibility:visible;
	-webkit-animation:fadeIn 0.2s;
	animation:fadeIn 0.2s;
}
@-webkit-keyframes fadeIn{
	from {opacity: 0;}
	to {opacity:1;}
}
@keyframes fadeIn{
	from{opacity:0;}
	to {opacity:1;}
}

